{% extends 'base.html.twig' %}

{% block title %}Trips List!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="../../public/css/tripDisplay.css">
{% endblock %}

{% block body %}
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Trip name</th>
        <th>Trip date</th>
        <th>Closure</th>
        <th>Registers/Places</th>
        <th>State</th>
        <th>Register</th>
        <th>Organizer</th>
    </tr>
    </thead>
    <tbody>
    {# boucler sur les sorties #}
    {% for trip in trips %}
        <tr>
            <td>{{ trip.name }}</td>
            <td>{{ trip.dateStartTime | date('Y-m-d') }}</td>
            <td>{{ trip.registrationDeadLine | date('Y-m-d') }}</td>
            <td>{{ trip.participants | length }}</td>
            <td>{{ trip.state.name }}</td>
            <td>
                {% if app.user in trip.participants %}
                    X
               {% else %}

                {% endif %}
            </td>
            <td>{{ trip.organizer | length }}</td>

        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}








