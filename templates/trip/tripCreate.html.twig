{% extends 'base.html.twig' %}
{% block title %}Création Sortie{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/tripCreation.css') }}">
    <link rel="stylesheet" href=
    "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
{% endblock %}

{% block body %}
    {%  for label,messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <br>
    <h2>Créer une sortie</h2>
    <br><br>
    <div class="container text-center">
        {{ form_start(tripForm) }}

        {# ligne 1 #}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">{{ form_label(tripForm.name) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.name) }}</div>
                    {{ form_errors(tripForm.name) }}
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-5">{{ form_label(tripForm.campus) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.campus) }}</div>
                    {{ form_errors(tripForm.campus) }}
                </div>
            </div>
        </div>
        <br><br>

        {# ligne 2 #}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">{{ form_label(tripForm.dateStartTime) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.dateStartTime) }}</div>
                    {{ form_errors(tripForm.dateStartTime) }}
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-5">{{ form_label(tripForm.place) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.place) }} </div>
                    {{ form_errors(tripForm.place) }}
                    <div class="col-1 mt-1">
                        <a href="{{ path('add_place') }}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br><br>

        {# ligne 3 #}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">{{ form_label(tripForm.registrationDeadLine) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.registrationDeadLine) }}</div>
                    {{ form_errors(tripForm.registrationDeadLine) }}
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-5">{{ form_label(tripForm.nbRegistrationsMax) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.nbRegistrationsMax) }}</div>
                    {{ form_errors(tripForm.nbRegistrationsMax) }}
                </div>
            </div>
        </div>
        <br><br>

        {# ligne 4 #}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">{{ form_label(tripForm.duration) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.duration) }}</div>
                    {{ form_errors(tripForm.duration) }}
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-5">Rue : zgzgqrfgzgqzreg</div>
                    <div class="col-6">Code Postal : zefzgsegetsg</div>
                </div>
            </div>
        </div>
        <br><br>

        {# ligne 5 #}
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6">{{ form_label(tripForm.infosTrip) }}</div>
                    <div class="col-6">{{ form_widget(tripForm.infosTrip) }}</div>
                    {{ form_errors(tripForm.infosTrip) }}
                </div>
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-5">Lat : -0.44865793</div>
                    <div class="col-6">Long : 41.665982173</div>
                </div>
            </div>
        </div>
        <br><br>


        {{ form_widget(tripForm.publish) }}
        {{ form_widget(tripForm.register) }}
        <a class="btn btn-danger" href="{{ path('display_all_updated') }}">Annuler</a>
        <br><br>
        {{ form_end(tripForm) }}
    </div>
{% endblock %}